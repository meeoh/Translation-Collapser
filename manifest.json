{
  "name": "GitHub File Collapser",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Collapse files matching regex patterns in GitHub PR reviews. Supports translation files, deleted files, and empty files.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "GitHub File Collapser"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["inject.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
